generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String         @unique
  password      String
  role          Role
  auctions      Auction[]      @relation("OwnerRelation") // leilões criados por este user
  bids          Bid[]
  notifications Notification[]
  wins          Auction[]      @relation("WinnerRelation") // leilões ganhos por este user
  createdAt     DateTime       @default(now())
}

model Auction {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String
  startingPrice Float
  currentPrice  Float
  endTime       DateTime
  status        AuctionStatus
  ownerId       String        @db.ObjectId
  owner         User?         @relation("OwnerRelation", fields: [ownerId], references: [id])
  bids          Bid[]
  createdAt     DateTime      @default(now())
  winnerId      String?       @db.ObjectId
  winner        User?         @relation("WinnerRelation", fields: [winnerId], references: [id])
}

model Bid {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Float
  userId    String   @db.ObjectId
  auctionId String   @db.ObjectId
  user      User?    @relation(fields: [userId], references: [id])
  auction   Auction? @relation(fields: [auctionId], references: [id])
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  message   String
  userId    String   @db.ObjectId
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

enum AuctionStatus {
  OPEN
  FINISHED
  CANCELLED
}
